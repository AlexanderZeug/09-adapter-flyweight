<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="de.fhro.inf.prg3.a09.MainActivity">

    <Spinner
        android:id="@+id/page_size_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/switch_rebellion_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/party_switch_rebellion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/page_size_spinner"
        app:layout_constraintEnd_toStartOf="@id/party_switch"/>

    <Switch
        android:id="@+id/party_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/switch_empire_text"
        app:layout_constraintStart_toEndOf="@id/switch_rebellion_text"
        app:layout_constraintTop_toBottomOf="@id/page_size_spinner"/>

    <TextView
        android:id="@+id/switch_empire_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/party_switch_empire"
        app:layout_constraintStart_toEndOf="@id/party_switch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/page_size_spinner"/>

    <ListView
        android:id="@+id/fighter_list_view"
        android:layout_width="368dp"
        android:layout_height="455dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/party_switch" />


</android.support.constraint.ConstraintLayout>
